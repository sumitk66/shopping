<div class="container">
	<h2>Showing Item</h2>
	<p>Name: <%= @item.name %></p>
	<p>Category: <%= @item.category %></p>
	<p>Description: <%= @item.description %></p>
	<p>Tag: <%= @item.tags %></p>
	<p>Availability: <%= @item.availability %></p>
	<p>Item Count : <%= @item.availability_count %></p>
	<p>Price: <%= @item.price %></p>
	<%= link_to "Create Item", new_product_path, class: "btn btn-primary"  %>
	<%= link_to "Back", products_path, class: "btn btn-primary" %>
</div>
