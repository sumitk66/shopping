<div class="container">
	<h1>Products Available</h1>
	<% @items.each do |item| %>
		<div>
			<p>Name: <%= link_to item.name, product_path(item) %></p>
			<p>Category: <%= item.category %></p>
			<p>Description: <%= item.description %></p>
			<p>Tag: <%= item.tags %></p>
			<p>Availability: <%= item.availability %></p>
			<p>Item Count : <%= item.availability_count %></p>
			<p>Price: <%= item.price %></p>
			<br><br>
		</div>
	<% end %>
</div>
